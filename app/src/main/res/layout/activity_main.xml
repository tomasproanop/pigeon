<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="100dp"
        android:text="Welcome to Pigeon!"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/description_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:text="Navigate through the app using the icons above. You can start a conversation,
        manage your contacts and chats, and adjust your preferences. :)"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
